@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<section class="rounded-2xl border border-rose-200 bg-white p-8 shadow-sm">
    <h1 class="text-2xl font-semibold text-rose-700">Error.</h1>
    <h2 class="mt-2 text-slate-700">Terjadi kesalahan saat memproses permintaan.</h2>

@if (Model.ShowRequestId)
{
    <p class="mt-4 text-sm text-slate-600">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

</section>
<section class="mt-6 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <h3 class="text-lg font-semibold text-slate-900">Development Mode</h3>
    <p class="mt-2 text-sm text-slate-600">
        Mode <strong>Development</strong> menampilkan detail error untuk debugging lokal.
    </p>
    <p class="mt-2 text-sm text-slate-600">
        Jangan aktifkan Development di produksi karena bisa mengekspos informasi sensitif.
        Untuk debugging lokal, set <strong>ASPNETCORE_ENVIRONMENT</strong> ke <strong>Development</strong>.
    </p>
</section>
